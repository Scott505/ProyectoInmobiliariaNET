@model IEnumerable<_Net.Models.AuditoriaPago>
@{
    ViewData["Title"] = "Auditoría de Pagos";
    var rol = Context.Session.GetString("UsuarioRol");
}

<div class="text-center mb-3">
    <h1 class="display-4">Auditoría de Pagos</h1>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">No hay registros de auditoría.</div>
}
else
{
<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdRegistro)</th>
            <th>@Html.DisplayNameFor(model => model.IdPago)</th>
            <th>Usuario Creador</th>
            <th>Fecha Creación</th>
            <th>Usuario Anulador</th>
            <th>Fecha Anulación</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdRegistro</td>
                <td>@item.IdPago</td>
                <td>@item.IdUsuarioCreador</td>
                <td>@item.FechaCreacion.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.IdUsuarioAnulador.HasValue ? item.IdUsuarioAnulador.ToString() : "-")</td>
                <td>@(item.FechaAnulacion.HasValue ? item.FechaAnulacion.Value.ToString("dd/MM/yyyy HH:mm") : "-")</td>
            </tr>
        }
    </tbody>
</table>
}