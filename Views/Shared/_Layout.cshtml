@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _Net</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Net.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Inicio</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @{
                            var rol = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioRol")
                                ?? HttpContextAccessor.HttpContext?.Request.Cookies["UsuarioRol"];
                            var nombre = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNombre")
                                ?? HttpContextAccessor.HttpContext?.Request.Cookies["UsuarioNombre"];
                            var idUsuario = HttpContextAccessor.HttpContext?.Session.GetInt32("UsuarioId")
                                ?? (int.TryParse(HttpContextAccessor.HttpContext?.Request.Cookies["UsuarioId"], out var cid) ? cid : 0);

                            var isLoggedIn = idUsuario > 0;
                        }

                        @* Links protegidos *@
                        @if (isLoggedIn)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Inquilinos" asp-action="Index">Inquilinos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Propietarios" asp-action="Index">Propietarios</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Inmuebles" asp-action="Index">Inmuebles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Contratos" asp-action="Index">Contratos</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Pagos" asp-action="Index">Pagos</a>
                            </li>
                        }

                        @* Perfil y usuarios *@
                        @if (!string.IsNullOrEmpty(rol) && rol == "Administrador")
                        {
                            
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Auditorias" asp-action="Index">Auditoria</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Index">Usuarios</a>
                            </li>
                        }
                        else if (!string.IsNullOrEmpty(rol) && rol == "Empleado")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Edit" asp-route-id="@idUsuario">Mi Perfil</a>
                            </li>
                        }

                        @if (!string.IsNullOrEmpty(rol))
                        {
                            <li class="nav-item">
                                <span class="navbar-text me-2">Hola, @(!string.IsNullOrEmpty(nombre) ? nombre : "Usuario")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Usuarios" asp-action="Logout">Salir</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light text-center py-3 mt-4">
        <span>&copy; @DateTime.Now.Year Universidad de La Punta</span>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
