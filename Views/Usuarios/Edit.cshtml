@model _Net.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
    var esAdmin = Context.Session.GetString("UsuarioRol") == "Administrador";
}

<h4>Editar Usuario</h4>

<form asp-action="Edit" method="post" class="col-md-4">
    <input type="hidden" asp-for="IdUsuario" />

    <div class="mb-3">
        <label asp-for="Nombre" class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Nuevo contraseña (dejar vacío si no desea cambiar)</label>
        <input name="NuevoPassword" type="password" class="form-control" />
    </div>

    @if (esAdmin)
    {
        <div class="mb-3">
            <label asp-for="Rol" class="form-label">Rol</label>
            <select asp-for="Rol" class="form-select">
                <option value="Administrador" selected="@Model.Rol == "Administrador"">Administrador</option>
                <option value="Empleado" selected="@Model.Rol == "Empleado"">Empleado</option>
            </select>
            <span asp-validation-for="Rol" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Activo" class="form-label">Activo</label>
            <select asp-for="Activo" class="form-select">
                <option value="true" selected="@Model.Activo">Sí</option>
                <option value="false" selected="!@Model.Activo">No</option>
            </select>
            <span asp-validation-for="Activo" class="text-danger"></span>
        </div>
    }

    <button type="submit" class="btn btn-primary">Guardar</button>
    @if (esAdmin)
    {
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    }
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
