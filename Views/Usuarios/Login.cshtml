@model _Net.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<div class="text-center mt-5">
    <h1 class="display-4">Iniciar Sesión</h1>
</div>

<div class="row justify-content-center mt-4">
    <div class="col-md-4">
        <form asp-action="Login" method="post" novalidate>
            <div class="mb-3">
                <label>Email</label>
                <input name="email" type="email" class="form-control" placeholder="usuario@correo.com" required />
            </div>

            <div class="mb-3">
                <label>Contraseña</label>
                <input name="password" type="password" class="form-control" placeholder="Contraseña" required />
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </div>
        </form>

        @* Mostrar sólo errores de validación/credenciales *@
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }
    </div>
</div>
