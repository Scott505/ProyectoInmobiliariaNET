@model _Net.Models.Usuario

@{
    ViewData["Title"] = "Delete User";
}

<h3>¿Está seguro que desea eliminar / inhabilitar este usuario?</h3>

<div>
    <h4>@(string.IsNullOrEmpty(Model.Nombre) ? Model.Email : Model.Nombre)</h4>
    <p>Email: @Model.Email</p>
    <p>Rol: @Model.Rol</p>
    <img src="@Url.Content(string.IsNullOrEmpty(Model.Avatar) ? "~/images/no-avatar.png" : Model.Avatar)" style="width:80px;height:80px;border-radius:50%;object-fit:cover" />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.IdUsuario" />
    <button type="submit" class="btn btn-danger">Eliminar / Inhabilitar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
