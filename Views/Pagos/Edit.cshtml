@model _Net.Models.Pago
@{
    ViewData["Title"] = "Editar Pago";
}

<h4>Editar Pago</h4>

<form asp-action="Edit" method="post" class="col-md-6">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- IdPago oculto -->
    <input type="hidden" asp-for="IdPago" />

    <!-- Contrato (solo lectura y gris) -->
    <div class="mb-3">
        <label class="form-label">Contrato</label>
        <input type="text" class="form-control" value="Contrato @Model.IdContrato" disabled />
    </div>

    <!-- Concepto (editable) -->
    <div class="mb-3">
        <label asp-for="concepto" class="form-label"></label>
        <input asp-for="concepto" class="form-control" />
    </div>

    <!-- Importe (solo lectura y gris) -->
    <div class="mb-3">
        <label asp-for="importe" class="form-label"></label>
        <input asp-for="importe" type="number" step="0.01" class="form-control" disabled />
    </div>

    <!-- Fecha (solo lectura y gris) -->
    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" type="date" class="form-control" disabled />
    </div>

    <!-- Anulado (solo lectura y gris) -->
    <div class="form-check mb-3">
        <input asp-for="anulado" class="form-check-input" disabled />
        <label asp-for="anulado" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Volver al listado</a>
</form>
