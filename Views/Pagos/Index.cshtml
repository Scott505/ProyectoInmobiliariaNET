@model IEnumerable<_Net.Models.Pago>
@{
    ViewData["Title"] = "Pagos";
        var rol = Context.Session.GetString("UsuarioRol");

}

<div class="text-center mb-3">
    <h1 class="display-4">Listado de Pagos</h1>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-lg"></i> Nuevo
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdPago)</th>
            <th>@Html.DisplayNameFor(model => model.IdContrato)</th>
            <th>@Html.DisplayNameFor(model => model.concepto)</th>
            <th>@Html.DisplayNameFor(model => model.importe)</th>
            <th>@Html.DisplayNameFor(model => model.Fecha)</th>
            <th>@Html.DisplayNameFor(model => model.anulado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.IdPago</td>
                <td>@pago.IdContrato</td>
                <td>@pago.concepto</td>
                <td>@pago.importe</td>
                <td>@pago.Fecha.ToShortDateString()</td>
                <td>@pago.anulado</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@pago.IdPago">Editar</a>
                        @if (rol == "Admin")
                       {
                        <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@pago.IdPago">Anular</a>
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
