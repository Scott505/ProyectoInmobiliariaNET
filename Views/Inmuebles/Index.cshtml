@model IEnumerable<_Net.Models.Inmueble>
@{
    ViewData["Title"] = "Inmuebles";
        var rol = Context.Session.GetString("UsuarioRol");

}

<div class="text-center mb-3">
    <h1 class="display-4">Listado de Inmuebles</h1>
    <a class="btn btn-success" asp-action="Create">
        <i class="bi bi-plus-lg"></i> Nuevo
    </a>
</div>

<!-- FILTROS -->
<form method="get" asp-action="Index" class="row g-3 mb-4">
    <div class="col-md-4">
        <label for="propietario" class="form-label">Propietario</label>
        <select name="idPropietario" class="form-select" asp-items="ViewBag.Propietarios" onchange="this.form.submit()">
            <option value="">-- Todos --</option>
        </select>
    </div>

    <div class="col-md-4 d-flex align-items-center">
        <div class="form-check mt-4">
            <input type="checkbox" name="disponible" value="true" class="form-check-input"
                   @(Context.Request.Query["disponible"] == "true" ? "checked" : "") onchange="this.form.submit()" />
            <label class="form-check-label">Solo disponibles</label>
        </div>
    </div>
</form>

<!-- TABLA -->
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdInmueble)</th>
            <th>@Html.DisplayNameFor(model => model.Direccion)</th>
            <th>@Html.DisplayNameFor(model => model.Tipo)</th>
            <th>@Html.DisplayNameFor(model => model.Uso)</th>
            <th>@Html.DisplayNameFor(model => model.Ambientes)</th>
            <th>@Html.DisplayNameFor(model => model.IdPropietario)</th>
            <th>@Html.DisplayNameFor(model => model.Disponible)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inmueble in Model)
        {
            <tr>
                <td>@inmueble.IdInmueble</td>
                <td>@inmueble.Direccion</td>
                <td>@inmueble.Tipo</td>
                <td>@inmueble.Uso</td>
                <td>@inmueble.Ambientes</td>
                <td>@inmueble.PropietarioNombreCompleto</td>
                <td>@(inmueble.Disponible ? "SÃ­" : "No")</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@inmueble.IdInmueble">Editar</a>
                        @if (rol == "Admin")
                       {
                      <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@inmueble.IdInmueble">Eliminar</a>
                       }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
