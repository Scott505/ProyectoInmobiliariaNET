@model IEnumerable<_Net.Models.Inquilino>
@{
    ViewData["Title"] = "Inquilinos";
        var rol = Context.Session.GetString("UsuarioRol");

}

<div class="text-center mb-3">
    <h1 class="display-4">Listado de Inquilinos</h1>
    <a class="btn btn-success" asp-action="Create" title="Nuevo Inquilino">
        <i class="bi bi-plus-lg"></i> Nuevo
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Documento)</th>
            <th>Nombre del Inquilino</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Mail)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var inquilino in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => inquilino.Documento)</td>
                <td>@($"{inquilino.Apellido}, {inquilino.Nombre}")</td>
                <td>@Html.DisplayFor(modelItem => inquilino.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => inquilino.Mail)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@inquilino.IdInquilino" title="Editar">
                            Editar
                        </a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@inquilino.IdInquilino" title="Eliminar">
                                Eliminar
                            </a>
                        }
                        <a class="btn btn-secondary" asp-controller="Contratos" asp-action="Index" asp-route-idInquilino="@inquilino.IdInquilino" title="Mis Alquileres">
                            Mis Alquileres
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

