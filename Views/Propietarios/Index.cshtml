@model IEnumerable<_Net.Models.Propietario>
@{
    ViewData["Title"] = "Propietarios";
        var rol = Context.Session.GetString("UsuarioRol");

}

<div class="text-center mb-3">
    <h1 class="display-4">Listado de Propietarios</h1>
    <a class="btn btn-success" asp-action="Create" title="Nuevo Propietario">
        <i class="bi bi-plus-lg"></i> Nuevo
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IdPropietario)</th>
            <th>@Html.DisplayNameFor(model => model.Documento)</th>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
            <th>@Html.DisplayNameFor(model => model.Mail)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var propietario in Model)
        {
            <tr>
                <td>@Html.DisplayFor(model => propietario.IdPropietario)</td>
                <td>@Html.DisplayFor(modelItem => propietario.Documento)</td>
                <td>@Html.DisplayFor(modelItem => propietario.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => propietario.Apellido)</td>
                <td>@Html.DisplayFor(modelItem => propietario.Telefono)</td>
                <td>@Html.DisplayFor(modelItem => propietario.Mail)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@propietario.IdPropietario" title="Editar">
                            Editar
                        </a>
                        @if (rol == "Administrador")
                       {
                        <a class="btn btn-danger" asp-action="Eliminar" asp-route-id="@propietario.IdPropietario" title="Eliminar">
                            Eliminar
                        </a>
                        }
                        <a class="btn btn-secondary" asp-action="Index" asp-controller="Inmuebles" asp-route-idPropietario="@propietario.IdPropietario" title="Mis Propiedades">
                            Mis Propiedades
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
